<Window x:Class="RecipeApp.ListRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="List Recipes" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <ListView Name="RecipesListView" Margin="10,10,10,10" FontSize="16" Grid.ColumnSpan="2" FontWeight="Bold" Height="420">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipes:" DisplayMemberBinding="{Binding Name}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>