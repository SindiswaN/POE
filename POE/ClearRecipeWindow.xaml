<Window x:Class="RecipeApp.ClearRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clear Recipe" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Select Recipe:"/>
            <ComboBox Name="RecipesComboBox" Margin="0 0 0 10"/>
            <Button Content="Clear Recipe" Click="ClearRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
