<Window x:Class="RecipeApp.FilterRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Recipes" Height="400" Width="600">
    <StackPanel Margin="10">
        <TextBlock Text="Filter Recipes" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="Ingredient Name:"/>
        <TextBox Name="IngredientTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Food Group:"/>
        <TextBox Name="FoodGroupTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Maximum Calories:"/>
        <TextBox Name="MaxCaloriesTextBox" Margin="0,0,0,10"/>
        <Button Content="Apply Filter" Click="ApplyFilter_Click" Width="100" Margin="0,10,0,0"/>
        <ListBox Name="FilteredRecipesListBox" Margin="10,10,0,0"/>
    </StackPanel>
</Window>
