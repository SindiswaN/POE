<Window x:Class="RecipeApp.SelectRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Recipe" Height="485" Width="400">
    <Grid>
        <ListView Name="RecipesListView" Margin="1" SelectionChanged="RecipesListView_SelectionChanged " FontSize="18" FontWeight="Bold">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipe Name" DisplayMemberBinding="{Binding Name}" Width="350"  />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Select Recipe" Click="SelectRecipe_Click" Margin="0,389,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"  Height="35" FontWeight="Bold" FontSize="15" Width="170"/>
    </Grid>
</Window>
